<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--    green application theme-->

    <style name="AppGreenTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryGreen</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkGreen</item>
        <item name="colorAccent">@color/colorAccentGreen</item>
    </style>

    <style name="TitleText" parent="TextAppearance.AppCompat">
        <item name="color">@color/colorTitleText</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DescText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
    </style>
</resources>
